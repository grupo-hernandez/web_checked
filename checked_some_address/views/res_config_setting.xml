<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view_inherit">
        <field name="name">res.config.settings.view.form.inherit.website.sale.checked</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hide_add_to_cart_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="checked_some_address" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="checked_some_address" />         
                        <div class="text-muted">
                            Check if you want the send to the same address field in the address form to appear as checked.
                        </div>
                    </div>
                </div> 
            </xpath>
        </field>
    </record>
</odoo>
